{% extends 'base.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="../css/admin/addBlogPost.css">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-1">
                <a href="/admin/accueil">
                    <img id="img-home" src="../img/pictos/arrow-105-64.png" alt="Flèche gauche">
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h1>Ajouter un article</h1>
            </div>
        </div>
        <div class="row">
            <div class="offset-1 col-10">
                <form method="post" action="/admin/post-new-article">
                    <div class="col-12">
                        <label for="titre">Titre</label>
                        <input type="text" name="titre" id="titre" required/>
                    </div>
                    <div class="col-12">
                        <label for="chapo">Chapô</label>
                        <textarea name="chapo" id="chapo" cols="30" rows="5"></textarea>
                    </div>
                    <div class="col-12">
                        <label for="contenu">Contenu</label>
                        <textarea name="contenu" id="contenu" cols="30" rows="10"></textarea>
                    </div>
                    <div class="col-12">
                        <p id="subP"><input type="submit" value="Valider" id="submit"/></p>
                    </div>
                </form>
            </div>

        </div>
    </div>
{% endblock %}