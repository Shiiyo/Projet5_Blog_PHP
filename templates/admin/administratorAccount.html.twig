{% extends 'base.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="../../css/admin/addBlogPost.css">
    <link rel="stylesheet" href="../../css/admin/administratorAccount.css">
    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-1">
                <a href="/admin/compte">
                    <img id="img-home" src="../../img/pictos/arrow-105-64.png" alt="Flèche gauche">
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h1>Modifier son profil</h1>
            </div>
        </div>
        <div class="row">
            <div class="offset-1 col-10">
                <form method="post" action="/admin/post-update-admin-account">
                    <div class="col-md-5 col-12 inline-block">
                        <label for="nom">Nom</label>
                        <input type="text" name="nom" id="nom" value="{{ admin.name }}" required/>
                    </div>
                    <div class="offset-md-1 col-md-5 col-12 inline-block">
                        <label for="prenom">Prénom</label>
                        <input type="text" name="prenom" id="prenom" value="{{ admin.firstName }}" required/>
                    </div>
                    <div class="col-md-5 col-12 inline-block">
                        <label for="pseudo">Pseudo</label>
                        <input type="text" name="pseudo" id="pseudo" value="{{ admin.pseudo }}" required/>
                    </div>
                    <div class="col-12">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" value="{{ admin.email }}" required/>
                    </div>
                    <div class="col-12 text-center">
                        <div class="g-recaptcha" data-sitekey="6LeJCnQUAAAAAOlqRpKqFm-4oo8i71Luuo0j_S_F"></div>
                    </div>
                    <input type="hidden" name="id_admin" id="id_admin" value="{{ admin.id }}">
                    <input type="hidden" name="token" id="token" value="{{ token }}">
                    <div class="col-12">
                        <p id="subP"><input type="submit" value="Valider" id="submit"/></p>
                    </div>
                </form>
            </div>
            <p class="col-6 inline-block"><a id="delete-account" href="{{ "/admin/account/delete/" ~ admin.id }}" onclick="return confirm('Etes-vous sûr ?');">Supprimer le compte</a></p>
            <p class="col-6 inline-block"><a id="update-password" href="{{ "/admin/compte/change-password/" ~ admin.id }}">Modifier le mot de passe</a></p>
        </div>
    </div>
{% endblock %}