{% extends 'base.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="../../../css/admin/addBlogPost.css">
<link rel="stylesheet" href="../../../css/admin/changePassword.css">
<script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-1">
            <a href="/admin/compte/{{ admin.id }}">
                <img id="img-home" src="../../../img/pictos/arrow-105-64.png" alt="FlÃ¨che gauche">
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h1>Modifier le mot de passe</h1>
        </div>
    </div>
    <div class="row">
        <div class="offset-1 col-10">
            <form method="post" action="/admin/post-update-password">
                <div class="col-12 inline-block">
                    <label for="oldPass">Ancien mot de passe</label>
                    <input type="password" name="oldPass" id="oldPass" required/>
                </div>
                <div class="col-12 inline-block">
                    <label for="newPass1">Nouveau mot de passe</label>
                    <input type="password" name="newPass1" id="newPass1" required/>
                </div>
                <div class="col-12 inline-block">
                    <label for="newPass2">Confirmer le nouveau mot de passe</label>
                    <input type="password" name="newPass2" id="newPass2" required/>
                </div>

                <div class="col-12 text-center">
                    <div class="g-recaptcha" data-sitekey="6LeJCnQUAAAAAOlqRpKqFm-4oo8i71Luuo0j_S_F"></div>
                </div>
                <input type="hidden" name="id_admin" id="id_admin" value="{{ admin.id }}">
                <input type="hidden" name="token" id="token" value="{{ token }}">
                <div class="col-12">
                    <p id="subP"><input type="submit" value="Valider" id="submit"/></p>
                </div>
            </form>
        </div>
        {% if session.success %}
            <div id="validation-form">
                <img src="../../../img/pictos/ok-128.png" alt="ok symbole">
                <p>{{ session.success|raw }}</p>
            </div>
        {% endif %}

        {% if session.error %}
            <div id="error-form">
                <img src="../../../img/pictos/error-5-128.png" alt="erreur symbole">
                <p>{{ session.error|raw }}</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}