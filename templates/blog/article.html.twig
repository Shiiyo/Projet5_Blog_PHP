{% extends 'base.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="css/blog/article.css">
    <link rel="stylesheet" href="css/footer.css">
    <link rel="stylesheet" href="css/blog/cercleDate.css">
{% endblock %}

{% block header %}
    <div class="row">
        <div class="col-3 col-lg-1">
            <a href="/accueil"><img src="img/pictos/house-64-white.png" alt="Maison picto"></a>
        </div>
        <div class="col-9 col-lg-3 return">
            <h4><a href="/accueil">Retour à l'accueil</a></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-3 col-lg-1">
            <a href="/accueil"><img src="img/pictos/arrow-105-64.png" alt="Flèche gauche"></a>
        </div>
        <div class="col-9 col-lg-3 return">
            <h4><a href="/liste-blog-post">Retour à la liste des articles</a></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h1>Titre article{{ article.title }}</h1>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container blog-post-container">
        {% for article in articleCollection %}
            <div class="row article-row">
                {% include 'blog\\dateCercle.html.twig' %}
                <strong>Publié par:</strong>
                <p class="author">{{ article.author}}</p>

                <div class="col-12 col-md-9 col-lg-10">
                    <p id="content">{{ article.content}}</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block footer %}
    {% include 'footer.html.twig' %}
{% endblock %}